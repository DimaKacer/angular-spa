doctype html
html
    head
        title Learn Angular!
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="../../build/styles/styles.css")

    body(ng-controller="mainCtrl")

        header
            include ../common/header/header.jade

        div#content(ui-view="module-content")
            .row.col-md-12.ui-view

        footer
            include ../common/footer/footer.jade

        script.
            var GLOBAL_USER_ID = '#{userId}';

        include error.html
        include ./search-module/index.jade
        include ../common/modal/index.html

        include ./tags-module/tags.jade

        script(src=locals.way + '../../build/scripts/vendor.js')
        script(src=locals.way + '../../build/scripts/search.bundle.js')
